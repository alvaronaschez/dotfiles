set nocompatible
syntax on
filetype plugin indent on
set autoindent
" set nowrap
set encoding=utf8
set clipboard=unnamedplus
set number
set mouse=a

let &t_SI = "\e[6 q"  " Set cursor to a vertical bar in insert mode
let &t_EI = "\e[2 q"  " Set cursor to a block in normal mode

" Make the escape key more responsive by decreasing the wait time for an
" escape sequence (e.g., arrow keys).
set ttimeout
set ttimeoutlen=100
set timeoutlen=500

" hlsearch
set hlsearch

set smarttab

" Use CTRL-L to clear the highlighting of 'hlsearch' (off by default) and call
" :diffupdate 
nnoremap <silent> <C-L> :nohlsearch<C-R>=has('diff')?'<Bar>diffupdate':''<CR><CR><C-L>

set list
set listchars=tab:→\ ,trail:·,extends:…,precedes:…,nbsp:•
"listchars+=eol:¬,space:·

" improve navigation between windows
"nnoremap <C-h> <C-w>h
"nnoremap <C-j> <C-w>j
"nnoremap <C-k> <C-w>k
"nnoremap <C-l> <C-w>l

nmap t :tabnew<CR>

nnoremap ; :
set exrc " use local .vimrc files

set hidden

" highlight colors
"hi MatchParen cterm=bold,underline ctermbg=gray ctermfg=red
"hi Search cterm=bold,underline ctermbg=gray ctermfg=red

" autopairs without a plugin
" inoremap " ""<left>
" inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
inoremap {<CR> {<CR>}<ESC>O
inoremap {;<CR> {<CR>};<ESC>O


" leader
let mapleader = "\<space>"
let maplocalleader = "\<space>"
" reload vim configuration 'source'
nmap <Leader>s :so $MYVIMRC<CR>


call plug#begin()

" List your plugins here
" Plug 'tpope/vim-sensible'

Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'

"Plug 'jiangmiao/auto-pairs'

Plug 'preservim/nerdtree'
Plug 'preservim/tagbar'
Plug 'ludovicchabant/vim-gutentags'

Plug 'rhysd/vim-clang-format'

Plug 'dense-analysis/ale'

Plug 'ervandew/supertab'

Plug 'chriskempson/base16-vim'

Plug 'mhinz/vim-startify'

"Plug 'Shougo/deoplete.nvim'
"Plug 'roxma/nvim-yarp'
"Plug 'roxma/vim-hug-neovim-rpc'

call plug#end()

"let g:deoplete#enable_at_startup = 1

"let g:ale_c_parse_makefile = 1
"let g:ale_linters = {'c': ['gcc']}

" airline
let g:airline_theme='monochrome'

" are we in tty?
"if $TERM != 'linux' " this will fail when running tmux from tty
if !empty($DISPLAY)
	let g:airline_powerline_fonts = 1
	let base16colorspace=256
	set termguicolors
	let g:airline_theme='base16'
endif


" tagbar
nmap <F5> :TagbarToggle<CR>

"ale
set path=.,/usr/include,/usr/include/x86_64-linux-gnu,,
let g:ale_linters = {'c': ['gcc']}
let g:ale_c_cc_executable = 'gcc'
"let g:ale_c_cc_options = '-std=c11 -Wall'
let g:ale_c_cc_options = '-std=gnu11 -Wall'


"colorscheme - run after loading base16 plugin
colorscheme base16-default-dark
"colorscheme default

"nerdtree
nnoremap <leader>n :NERDTreeFocus<CR>
nnoremap <C-n> :NERDTree<CR>
nnoremap <C-t> :NERDTreeToggle<CR>
nnoremap <C-f> :NERDTreeFind<CR>

